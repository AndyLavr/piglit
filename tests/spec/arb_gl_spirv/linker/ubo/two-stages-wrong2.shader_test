#version 450

layout (location = 0) in vec4 position;
layout (location = 20) uniform vec4 extPosition;
layout (binding = 5) uniform ComponentsBlock
 {
    vec4 c1;
    vec2 c2;
 } components;

void main()
{
    gl_Position = position + extPosition + components.c1 + vec4(components.c2, 0.0, 0.0);
}


