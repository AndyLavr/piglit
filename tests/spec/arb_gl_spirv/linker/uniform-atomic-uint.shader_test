[require]
GL >= 3.3
GLSL >= 3.30
GL_ARB_gl_spirv

[compute shader]
#version 450

layout (local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout (binding = 0) uniform atomic_uint auival;

void main()
{
    uint uival = atomicCounterIncrement(auival) +
                 atomicCounterDecrement(auival) +
                 atomicCounter(auival);
}

[test]
link success
