[require]
SPIRV YES
GL >= 4.5
GLSL >= 4.50
GL_ARB_gl_spirv

[vertex shader]
#version 450 core

layout(location = 0) in vec4 piglit_vertex;
layout(location = 0) out vec4 v;
layout(location = 1) out float f;

void main()
{
	gl_Position = piglit_vertex;
	v = vec4(1.0, 0.0, 0.0, 0.0);
	f = 0.5;
}

[fragment shader]
#version 450 core

layout(location = 0) in vec4 v1;
layout(location = 1) in float f1;
layout(location = 0) out vec4 out_color;

void main()
{
	vec4 v4 = f1 * v1;
	out_color = v4;
	out_color.a = 1.0;
}

[test]
draw rect -1 -1 2 2
probe all rgba 0.5 0.0 0.0 1.0
