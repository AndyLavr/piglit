[require]
SPIRV YES
GL >= 3.3
GLSL >= 3.30
GL_ARB_gl_spirv

[vertex shader]
#version 450

layout(location = 0) in vec4 piglit_vertex;
layout(location = 0) out float out_v0;
layout(location = 9) out float out_v9;

void main()
{
	gl_Position = piglit_vertex;
	out_v0 = 0.5;
	out_v9 = 1.0;
}

[fragment shader]
#version 450

layout(location = 0) in float in_v0;
layout(location = 9) in float in_v9;

layout(location = 0) out vec4 color;

void main()
{
	color = vec4(0.0, 0.0, 0.0, 1.0);
	color.r = in_v9;
	color.b = in_v0;
}

[test]
draw rect -1 -1 2 2
probe all rgba 1.0 0.0 0.5 1.0
