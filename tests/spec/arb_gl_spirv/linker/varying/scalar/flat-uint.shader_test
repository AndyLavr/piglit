[require]
SPIRV YES
GL >= 3.3
GLSL >= 3.30
GL_ARB_gl_spirv

[vertex shader]
#version 450

layout(location = 0) in vec4 piglit_vertex;
flat out uint v0;
flat out uint v9;

void main()
{
	gl_Position = piglit_vertex;
	v0 = 0;
	v9 = 1;
}

[fragment shader]
#version 450

flat in uint v9;
flat in uint v0;

layout(location = 0) out vec4 color;

void main()
{
	color = vec4(1.0, 0.0, 0.0, 1.0);
	color.r = v9;
	color.b = v0;
}

[test]
draw rect -1 -1 2 2
probe all rgba 1.0 0.0 0.0 1.0
