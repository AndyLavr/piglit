# Test using a simple struct uniform with a non-zero explicit location
# used on both stages.

[require]
GL >= 3.3
GLSL >= 4.50

[vertex shader]
#version 450

struct parts {
        vec4 part1;
        vec4 part2;
};

layout(location = 4) uniform parts fsin;

layout(location = 0) out vec4 crosscolor;

layout(location = 0) in vec4 piglit_vertex;

void main() {
    crosscolor = fsin.part1;
    gl_Position = piglit_vertex;
}

[fragment shader]
#version 450

struct parts {
        vec4 part1;
        vec4 part2;
};

layout(location = 4) uniform parts fsin;

layout(location = 0) out vec4 outcolor;

layout(location = 0) in vec4 crosscolor;

void main() {
        outcolor = crosscolor + fsin.part2;
}

[test]
clear color 1.0 0.0 0.0 0.0
clear

uniform vec4 4 0.1 0.15 0.2 0.25
uniform vec4 5 0.3 0.35 0.4 0.45

draw rect -1 -1 2 2
probe all rgba 0.4 0.5 0.6 0.7
