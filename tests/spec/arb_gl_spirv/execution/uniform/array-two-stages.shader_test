# Test a very simple VS-PS shader pipeline with an array of two
# uniforms with explicit location, used on two different stages.

[require]
GL >= 3.3
GLSL >= 4.50

[vertex shader]
#version 450

layout(location = 0) in vec4 piglit_vertex;

layout(location = 0) out vec4 crosscolor;

layout(location = 0) uniform vec4 uniforms[2];


void main() {
   crosscolor = uniforms[0];
   gl_Position = piglit_vertex;
}

[fragment shader]
#version 450

layout(location = 0) uniform vec4 uniforms[2];

layout(location = 0) in vec4 crosscolor;

layout(location = 0) out vec4 outcolor;

void main() {
    outcolor = crosscolor * uniforms[1];
}

[test]
clear color 1.0 0.0 0.0 0.0
clear

uniform vec4 0 0.2 0.1 0.1 1.6
uniform vec4 1 0.5 2.0 3.0 0.25

draw rect -1 -1 2 2
probe all rgba 0.1 0.2 0.3 0.4
