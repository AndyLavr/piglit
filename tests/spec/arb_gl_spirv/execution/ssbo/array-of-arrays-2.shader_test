[fragment shader]
#version 450

layout (location = 0) out vec4 color;

layout (binding = 5) buffer ssbo {
	vec4 color[2][2];
} arr;



void main()
{
	color = arr.color[0][0] + arr.color[1][1];
}

[test]
clear color 0.2 0.2 0.2 0.2
clear

ssbo 5 64
ssbo 5 subdata float 0  0.11
ssbo 5 subdata float 4  0.12
