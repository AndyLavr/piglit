#version 450 core

layout(location = 0) out vec4 out_color;
layout(location = 0) in mat3x4 m3x4;
layout(location = 4) in mat2x3 m2x3;

void main()
{
	vec4 c1 = vec4(m3x4[0]);
	vec4 c2 = vec4(m2x3[1], 1.0);

	out_color = c1 + c2;
}

