# UBO test using a matrix.

[require]
GL >= 3.3
GLSL >= 3.30
GL_ARB_gl_spirv

[vertex shader]

#version 450

layout (location = 0) in vec4 piglit_vertex;
layout (location = 1) out vec4 vertexColor;
layout (binding = 5, row_major) uniform ComponentsBlock
 {
    vec4 c1;
    vec2 c2;
    mat2 matrix;
 } components;

void main()
{
    vertexColor = vec4(components.matrix[0][0], components.matrix[0][1], components.matrix[1][0], components.matrix[1][1]);
    vertexColor += components.c1 + vec4(components.c2, 0.0, 0.0);
    gl_Position = piglit_vertex;
}


[fragment shader]

#version 450

layout (location = 0) out vec4 outColor;
layout (location = 1) in vec4 vertexColor;
layout (binding = 5, row_major) uniform ComponentsBlock
 {
    vec4 c1;
    vec2 c2;
    mat2 matrix;
 } components;

void main()
{
	vec4 color = components.c1 + vec4(components.c2, 0.0, 0.0);
	color += vec4(components.matrix[0][0], components.matrix[0][1], components.matrix[1][0], components.matrix[1][1]);
	outColor = color - vertexColor + vec4(0.0, 1.0, 0.0, 0.0);
}

[test]
clear color 1.0 0.0 0.0 0.0
clear

ubo binding 5
ubo offset 0
uniform vec4 ComponentsBlock.c1 0.0 0.0 0.3 0.4
ubo offset 16
uniform vec2 ComponentsBlock.c2 0.1 0.2

ubo matrix stride 16
ubo row major 0
uniform mat4 ComponentsBlock.matrix 0.25 0.5 0.75 1.0

draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 0.0
