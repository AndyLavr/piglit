[fragment shader]

#version 450

layout (location = 0) out vec4 outColor;
layout (binding = 5, row_major) uniform ComponentsBlock
 {
 mat3x3 m;
 };

void main()
{
	outColor = vec4(m[0] + m[1] + m[2], 0.0);
}

[test]
clear color 0.0 0.0 0.0 0.0
clear

block binding 5
block offset 0
block matrix stride 16
block row major 1
uniform mat3x3 m 0.11 0.12 0.13 0.21 0.22 0.23 0.31 0.32 0.33

draw rect -1 -1 2 2
probe all rgba 0.63 0.66 0.69 0.0

verify program_interface_query GL_UNIFORM_BLOCK ComponentsBlock GL_NUM_ACTIVE_VARIABLES 1
verify program_interface_query GL_UNIFORM_BLOCK ComponentsBlock GL_BUFFER_DATA_SIZE 48
