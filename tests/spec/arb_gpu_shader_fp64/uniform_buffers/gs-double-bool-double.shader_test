[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader]
#version 150
in vec4 piglit_vertex;
out vec4 vertex_to_gs;

void main()
{
        vertex_to_gs = piglit_vertex;
}

[geometry shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require
layout(triangles) in;
layout(triangle_strip, max_vertices = 3) out;

uniform double arg0;
uniform bool arg1;
uniform double arg2;

in vec4 vertex_to_gs[3];
out vec4 v;

void main()
{
	if (arg1)
		v = vec4(arg0, arg2, 0.0, 0.0);
	else
		v = vec4(arg0, arg2, 1.0, 0.0);

        for (int i = 0; i < 3; i++) {
                gl_Position = vertex_to_gs[i];
                EmitVertex();
        }

}

[fragment shader]
#version 150

in vec4 v;
out vec4 color;

void main()
{
	color = v;
}

[test]
uniform double arg0 1.0
uniform int arg1 1
uniform double arg2 1.0
draw rect -1 -1 2 2
probe all rgba 1.0 1.0 0.0 0.0
