[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform ubo1 {
  double r;
  float g;
  double b;
  double a;
};

in vec4 piglit_vertex;
out vec4 v;

void main()
{
	gl_Position = piglit_vertex;
	v = vec4(r, g, b, a);
}

[fragment shader]
#version 150

in vec4 v;

void main()
{
	gl_FragColor = v;
}

[test]
uniform double r 0.0
uniform float g 1.0
uniform double b 1.0
uniform double a 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 1.0 0.0
