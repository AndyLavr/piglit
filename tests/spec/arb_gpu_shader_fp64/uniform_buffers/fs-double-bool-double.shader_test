# test indirect access to a temporary array of doubles as a source
[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform double arg0;
uniform bool arg1;
uniform double arg2;

void main()
{
  if (arg1)
    gl_FragColor = vec4(arg0, arg2, 0.0, 0.0);
  else
    gl_FragColor = vec4(arg0, arg2, 1.0, 0.0);
}

[test]
uniform double arg0 1.0
uniform int arg1 1
uniform double arg2 1.0
draw rect -1 -1 2 2
probe all rgba 1.0 1.0 0.0 0.0
