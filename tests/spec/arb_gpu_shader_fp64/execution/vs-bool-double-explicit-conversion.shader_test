[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : enable

uniform double double_value;
uniform bool bool_value;

in vec4 piglit_vertex;
out vec4 fs_color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
	gl_Position = piglit_vertex;
	double converted = double(bool_value);
	bool match = converted == double_value;
	fs_color = match ? GREEN : RED;
}

[fragment shader]
#version 150

in vec4 fs_color;
out vec4 color;

void main()
{
	color = fs_color;
}


[test]
uniform double double_value 0.0
uniform int bool_value 0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform double double_value 1.0
uniform int bool_value 1
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
