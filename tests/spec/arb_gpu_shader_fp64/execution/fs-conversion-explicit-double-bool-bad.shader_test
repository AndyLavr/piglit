[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform double double_value_1;
uniform double double_value_2;

out vec4 color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    bool converted_1 = bool(double_value_1);
    bool converted_2 = bool(double_value_2);
    bool match = converted_1 && converted_2;
    color = match ? GREEN : RED;
}

[test]
# 64bit positive minimum denormalized
uniform double double_value_1 0x0000000000000001
# 64bit negative minimum denormalized
uniform double double_value_2 0x8000000000000001
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

