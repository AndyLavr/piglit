[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform double double_value;
uniform float float_value;

in vec4 piglit_vertex;
out vec4 fs_color;

#define ONE float(1.0)
#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    gl_Position = piglit_vertex;
    float converted = float(double_value);
    float inf_converted = ONE / converted;
    bool match = inf_converted == float_value;
    fs_color = match ? GREEN : RED;
}

[fragment shader]
#version 150

in vec4 fs_color;
out vec4 color;

void main()
{
    color = fs_color;
}

[test]
# -0.0
uniform double double_value 0x8000000000000000
# -inf
uniform float float_value 0xFF800000
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform double double_value 0.0
# +inf
uniform float float_value 0x7F800000
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
