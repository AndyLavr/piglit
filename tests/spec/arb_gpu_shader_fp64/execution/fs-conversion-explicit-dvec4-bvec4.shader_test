[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform bvec4 bvec4_value;
uniform dvec4 dvec4_value;

out vec4 color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    bvec4 converted = bvec4(dvec4_value);
    bool match = converted == bvec4_value;
    color = match ? GREEN : RED;
}

[test]
uniform ivec4 bvec4_value 0 1 1 0
uniform dvec4 dvec4_value 0.0 1.0 9007199254740992.0 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform ivec4 bvec4_value 1 1 0 1
uniform dvec4 dvec4_value 1.0 9007199254740992.0 0.0 1.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform ivec4 bvec4_value 1 0 1 1
uniform dvec4 dvec4_value 9007199254740992.0 0.0 1.0 9007199254740992.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
