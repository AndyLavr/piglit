[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform uvec2 uvec2_value;
uniform dvec2 dvec2_value;

out vec4 color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    dvec2 converted = uvec2_value;
    bool match = converted == dvec2_value;
    color = match ? GREEN : RED;
}

[test]
uniform uvec2 uvec2_value 5 5
uniform dvec2 dvec2_value 5.0 5.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform uvec2 uvec2_value 2147483647 2147483647
