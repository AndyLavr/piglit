[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform double from;
uniform double to;
uniform float thesign;

out vec4 color;

#define ONE 1.0
#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    double pre_converted = from;
    double converted = ONE / pre_converted;
    bool match = (converted == to) && (thesign == sign(converted));
    color = match ? GREEN : RED;
}


[test]
uniform double from 0x8000000000000000
uniform double to 0xfff0000000000000
uniform float thesign -1.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform double from 0x0000000000000000
uniform double to 0x7ff0000000000000
uniform float thesign 1.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
