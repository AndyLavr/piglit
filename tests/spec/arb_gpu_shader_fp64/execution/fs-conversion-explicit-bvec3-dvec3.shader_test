[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform bvec3 bvec3_value;
uniform dvec3 dvec3_value;

out vec4 color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    dvec3 converted = dvec3(bvec3_value);
    bool match = converted == dvec3_value;
    color = match ? GREEN : RED;
}

[test]
uniform ivec3 bvec3_value 0 0 0
uniform dvec3 dvec3_value 0.0 0.0 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform ivec3 bvec3_value 1 1 1
uniform dvec3 dvec3_value 1.0 1.0 1.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
