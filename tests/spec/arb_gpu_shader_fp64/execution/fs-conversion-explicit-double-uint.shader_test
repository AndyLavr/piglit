[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform uint uint_value;
uniform double double_value;

out vec4 color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    uint converted = uint(double_value);
    bool match = converted == uint_value;
    color = match ? GREEN : RED;
}

[test]
# 64bit -inf
#uniform double double_value 0xFFF0000000000000
#uniform uint uint_value 0
#draw rect -1 -1 2 2
#probe all rgba 0.0 1.0 0.0 1.0

# Minimum overflow
uniform double double_value -5.0
uniform uint uint_value 0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

# Minimum limit overflow
uniform double double_value 0x8000000000000001
uniform uint uint_value 0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

# -0.0
uniform double double_value 0x8000000000000000
uniform uint uint_value 0
