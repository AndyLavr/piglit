[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : enable

uniform uint uint_value;
uniform double double_value;

out vec4 color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
	uint converted = uint(double_value);
	bool match = converted == uint_value;
	color = match ? GREEN : RED;
}

[test]
uniform double double_value 10.0
uniform uint uint_value 10
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform double double_value 2147483647.0
uniform uint uint_value 2147483647
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform double double_value 4278190080.0
uniform uint uint_value 4278190080
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

