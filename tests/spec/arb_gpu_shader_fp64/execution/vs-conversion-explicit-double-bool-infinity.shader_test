[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform double double_value_1;
uniform double double_value_2;

in vec4 piglit_vertex;
out vec4 fs_color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    gl_Position = piglit_vertex;
    bool converted_1 = bool(double_value_1);
    bool converted_2 = bool(double_value_2);
    bool match = converted_1 && converted_2;
    fs_color = match ? GREEN : RED;
}

[fragment shader]
#version 150

in vec4 fs_color;
out vec4 color;

void main()
{
    color = fs_color;
}


[test]
# -inf
uniform double double_value_1 0x7FF0000000000000
# +inf
uniform double double_value_2 0xFFF0000000000000
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
