[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform int int_value;
uniform double double_value;

out vec4 color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    int converted = int(double_value);
    bool match = converted == int_value;
    color = match ? GREEN : RED;
}

[test]
# 64bit -inf
#uniform double double_value 0x7FF0000000000000
#uniform int int_value -2147483648
#draw rect -1 -1 2 2
#probe all rgba 0.0 1.0 0.0 1.0

# Negative overflow
uniform double double_value -2147483649.0
uniform int int_value -2147483648
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

# Negative minimum
uniform double double_value -2147483648.0
uniform int int_value -2147483648
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform double double_value -5.0
uniform int int_value -5
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

# -0.0
uniform double double_value 0x8000000000000000
uniform int int_value 0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform double double_value 0.0
uniform int int_value 0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform double double_value 5.0
uniform int int_value 5
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

# Positive maximum
uniform double double_value 2147483647.0
uniform int int_value 2147483647
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

# Positive overflow
uniform double double_value 2147483648.0
uniform int int_value 2147483647
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

