[require]
GLSL >= 1.50

[vertex shader passthrough]

[fragment shader]
#version 150

uniform float from;
uniform float thesign;

out vec4 color;

#define ONE 1.0
#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    bool match = thesign == sign(from);
    color = match ? GREEN : RED;
}


[test]
uniform float from 0x80000000
#uniform float thesign -1.0
uniform float thesign 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform float from 0x00000000
#uniform float thesign 1.0
uniform float thesign 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
