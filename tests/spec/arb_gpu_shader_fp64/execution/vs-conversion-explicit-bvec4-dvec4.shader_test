[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform dvec4 dvec4_value;
uniform bvec4 bvec4_value;

in vec4 piglit_vertex;
out vec4 fs_color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    gl_Position = piglit_vertex;
    dvec4 converted = dvec4(bvec4_value);
    bool match = converted == dvec4_value;
    fs_color = match ? GREEN : RED;
}

[fragment shader]
#version 150

in vec4 fs_color;
out vec4 color;

void main()
{
    color = fs_color;
}


[test]
uniform ivec4 bvec4_value 0 0 0 0
uniform dvec4 dvec4_value 0.0 0.0 0.0 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

uniform ivec4 bvec4_value 1 1 1 1
uniform dvec4 dvec4_value 1.0 1.0 1.0 1.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
