[require]
# This will need GL 4.2

GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform double double_value;
uniform float float_value;

out vec4 color;

#define ONE double(1.0)
#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    double converted = float_value;
    double inf_converted = ONE / converted;
    bool match = inf_converted == double_value;
    color = match ? GREEN : RED;
}

[test]
# -inf
uniform double double_value 0xFFF0000000000000
# -0.0
uniform float float_value 0x80000000
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0

# +inf
uniform double double_value 0x7FF0000000000000
uniform float float_value 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
