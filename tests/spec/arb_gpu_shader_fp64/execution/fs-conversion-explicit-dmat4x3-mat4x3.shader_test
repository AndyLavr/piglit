[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64

[vertex shader passthrough]

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

uniform dmat4x3 dmat4x3_value;
uniform mat4x3 mat4x3_value;

out vec4 color;

#define RED vec4(1.0, 0.0, 0.0, 1.0)
#define GREEN vec4(0.0, 1.0, 0.0, 1.0)

void main()
{
    mat4x3 converted = mat4x3(dmat4x3_value);
    bool match = converted == mat4x3_value;
    color = match ? GREEN : RED;
}

