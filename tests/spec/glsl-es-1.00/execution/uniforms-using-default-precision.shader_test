[require]
GL ES >= 2.0
GLSL ES >= 1.00

[vertex shader]
#version 100

precision highp float;

attribute vec4 piglit_vertex;
varying float f[4];
uniform vec4 f_1;

void main()
{
    gl_Position = piglit_vertex;
    f[0] = f_1[0];
    f[1] = f_1[1];
    f[2] = f_1[2];
    f[3] = f_1[3];
}

[fragment shader]
#version 100

precision highp float;

varying float f[4];
uniform mediump vec4 f_2;

void main()
{
    gl_FragColor = vec4(f[0] + f_2[0],
                        f[1] + f_2[1],
                        f[2] + f_2[2],
                        f[3] + f_2[3]);
}

[test]
uniform vec4 f_1 0.1 0.2 0.3 0.4
uniform vec4 f_2 0.05 0.06 0.07 0.08
draw rect -1 -1 2 2
probe all rgba 0.15 0.26 0.37 0.48
