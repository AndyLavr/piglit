[require]
GL ES >= 3.1
GLSL ES >= 3.10

[vertex shader passthrough]

[fragment shader]
#version 310 es

precision mediump float;

uniform float thing[2][2];
layout(location = 0) out vec4 out_colour;

void
main()
{
	out_colour.x = thing[0][0] * thing[0][1];
	out_colour.y = thing[1][0] * thing[1][1];
	out_colour.z = 0.0;
	out_colour.w = 0.0;
}

