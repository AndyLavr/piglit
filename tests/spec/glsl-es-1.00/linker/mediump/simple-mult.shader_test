[require]
GL ES >= 3.1
GLSL ES >= 3.10

[vertex shader]
#version 310 es

precision highp float;

layout(location = 0) in vec4 pos;
layout(location = 0) out float thing_x;
layout(location = 1) out float thing_y;

void
main()
{
	gl_Position = pos;
	thing_x = pos.x;
	thing_y = pos.y;
}

[fragment shader]
#version 310 es

precision mediump float;

layout(location = 0) in float thing_x;
layout(location = 1) in float thing_y;
layout(location = 0) out vec4 out_colour;

void
main()
{
	out_colour.x = thing_x * thing_y;
	out_colour.y = thing_x * 0.25;
	out_colour.z = 0.0;
	out_colour.w = 0.0;
}

[test]
clear
draw rect -1 -1 2 2
