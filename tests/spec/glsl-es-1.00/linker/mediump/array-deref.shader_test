[require]
GL ES >= 3.1
GLSL ES >= 3.10

[vertex shader]
#version 310 es

precision highp float;

layout(location = 0) in vec4 pos;
layout(location = 0) out float thing[2];

void
main()
{
	gl_Position = pos;
	thing[0] = pos.x;
	thing[1] = pos.y;
}

[fragment shader]
#version 310 es

precision mediump float;

layout(location = 0) in float thing[2];
layout(location = 0) out vec4 out_colour;

void
main()
{
	out_colour.x = thing[0] * thing[1];
	out_colour.y = thing[0] * 0.25;
	out_colour.z = 0.0;
	out_colour.w = 0.0;
}

